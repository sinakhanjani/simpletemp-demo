<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowsBackground"
    tools:context=".ui.pages.dentaltemp.profile.rating.MyRatingFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/overall_rating"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/colorTextTitle" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/colorLightBg"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:strokeColor="@color/colorBorder"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="14dp">


                    <!-- 5 STAR -->
                    <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                        android:id="@+id/rb_rating_5"
                        style="@style/AppRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ratings_star_height"
                        app:count="5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:rating="5" />

                    <TextView
                        android:id="@+id/tv_rating_5"
                        style="@style/RatingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_5"
                        app:layout_constraintStart_toEndOf="@+id/rb_rating_5"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_5"
                        tools:text="541" />

                    <ProgressBar
                        android:id="@+id/pgb_rating_5"
                        style="@style/RatingProgressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rating_barrier"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_5"
                        tools:progress="74" />


                    <!-- 4 STAR -->
                    <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                        android:id="@+id/rb_rating_4"
                        style="@style/AppRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ratings_star_height"
                        android:layout_marginTop="16dp"
                        app:count="4"
                        app:layout_constraintEnd_toEndOf="@+id/rb_rating_5"
                        app:layout_constraintTop_toBottomOf="@id/rb_rating_5"
                        app:rating="4" />

                    <TextView
                        android:id="@+id/tv_rating_4"
                        style="@style/RatingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_4"
                        app:layout_constraintStart_toEndOf="@+id/rb_rating_4"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_4"
                        tools:text="85" />

                    <ProgressBar
                        android:id="@+id/pgb_rating_4"
                        style="@style/RatingProgressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rating_barrier"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_4"
                        tools:progress="60" />


                    <!-- 3 STAR -->
                    <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                        android:id="@+id/rb_rating_3"
                        style="@style/AppRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ratings_star_height"
                        android:layout_marginTop="16dp"
                        app:count="3"
                        app:layout_constraintEnd_toEndOf="@+id/rb_rating_4"
                        app:layout_constraintTop_toBottomOf="@id/rb_rating_4"
                        app:rating="3" />

                    <TextView
                        android:id="@+id/tv_rating_3"
                        style="@style/RatingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_3"
                        app:layout_constraintStart_toEndOf="@+id/rb_rating_3"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_3"
                        tools:text="41" />

                    <ProgressBar
                        android:id="@+id/pgb_rating_3"
                        style="@style/RatingProgressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rating_barrier"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_3"
                        tools:progress="42" />


                    <!-- 2 STAR -->
                    <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                        android:id="@+id/rb_rating_2"
                        style="@style/AppRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ratings_star_height"
                        android:layout_marginTop="16dp"
                        app:count="2"
                        app:layout_constraintEnd_toEndOf="@+id/rb_rating_3"
                        app:layout_constraintTop_toBottomOf="@id/rb_rating_3"
                        app:rating="2" />

                    <TextView
                        android:id="@+id/tv_rating_2"
                        style="@style/RatingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_2"
                        app:layout_constraintStart_toEndOf="@+id/rb_rating_2"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_2"
                        tools:text="15" />

                    <ProgressBar
                        android:id="@+id/pgb_rating_2"
                        style="@style/RatingProgressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rating_barrier"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_2"
                        tools:progress="20" />


                    <!-- 1 STAR -->
                    <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                        android:id="@+id/rb_rating_1"
                        style="@style/AppRatingBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/ratings_star_height"
                        android:layout_marginTop="16dp"
                        app:count="1"
                        app:layout_constraintDimensionRatio="2:1"
                        app:layout_constraintEnd_toEndOf="@+id/rb_rating_2"
                        app:layout_constraintTop_toBottomOf="@id/rb_rating_2"
                        app:rating="1" />

                    <TextView
                        android:id="@+id/tv_rating_1"
                        style="@style/RatingTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_1"
                        app:layout_constraintStart_toEndOf="@+id/rb_rating_1"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_1"
                        tools:text="12" />

                    <ProgressBar
                        android:id="@+id/pgb_rating_1"
                        style="@style/RatingProgressBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/rb_rating_1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/rating_barrier"
                        app:layout_constraintTop_toTopOf="@+id/rb_rating_1"
                        tools:progress="5" />


                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/rating_barrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="tv_rating_5, tv_rating_4, tv_rating_3, tv_rating_2, tv_rating_1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                android:id="@+id/rb_rating_avg"
                style="@style/AppRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                app:betweenSpace="8dp"
                app:count="5"
                app:layout_constraintEnd_toEndOf="@+id/rb_rating_2"
                app:layout_constraintTop_toBottomOf="@id/rb_rating_2"
                tools:rating="3" />

            <TextView
                android:id="@+id/tv_rating_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorTextSecondary"
                tools:text="4.6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/professionalism"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/colorTextGray" />

            <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                android:id="@+id/rb_rating_professionalism"
                style="@style/AppRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:betweenSpace="8dp"
                app:count="5"
                app:layout_constraintEnd_toEndOf="@+id/rb_rating_2"
                app:layout_constraintTop_toBottomOf="@id/rb_rating_2"
                tools:rating="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/timekeeping"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/colorTextGray" />

            <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                android:id="@+id/rb_rating_timekeeping"
                style="@style/AppRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:betweenSpace="8dp"
                app:count="5"
                app:layout_constraintEnd_toEndOf="@+id/rb_rating_2"
                app:layout_constraintTop_toBottomOf="@id/rb_rating_2"
                tools:rating="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/competency_and_skills"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/colorTextGray" />

            <com.simpletempco.simpletemp.ui.custom.views.AppRatingBar
                android:id="@+id/rb_rating_competency_and_skills"
                style="@style/AppRatingBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                app:betweenSpace="8dp"
                app:count="5"
                app:layout_constraintEnd_toEndOf="@+id/rb_rating_2"
                app:layout_constraintTop_toBottomOf="@id/rb_rating_2"
                tools:rating="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/reviews"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textColor="@color/colorTextTitle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:itemCount="3"
                tools:listitem="@layout/adapter_review" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.simpletempco.simpletemp.ui.custom.views.NonDataLayout
        android:id="@+id/non_data_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowsBackground"
        tools:visibility="gone" />

</FrameLayout>