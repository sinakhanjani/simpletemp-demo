<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_message_me"
        android:fontFamily="@font/poppins_regular"
        android:padding="16dp"
        android:includeFontPadding="false"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
        android:textColor="@color/colorTextTitle"
        tools:text="This posting was deleted by the clinic. We apologize for the Incovenience! Please check out other available shifts for this day.This posting was deleted by the clinic.Incovenience! Please check out other available shifts for this day." />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/colorTextSecondary"
        tools:text="23, 15, 2021" />

</LinearLayout>